{
  "name": "dcp-ops-status-notification",
  "version": "0.1.0",
  "bin": {
    "dcp-ops-status-notification": "bin/dcp-ops-status-notification.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test:cdk": "jest --testPathPattern ./test/cdk/*.test.ts",
    "test:unit": "cd lambda/dcp_etl && uv run pytest -v --tb=short --disable-warnings --maxfail=1",
    "cdk": "cdk",
    "lint": "eslint . --fix && uvx ruff check",
    "lint:ci": "eslint . && uvx ruff check --no-fix",
    "format": "prettier --write . && uvx ruff format",
    "format:ci": "prettier --check . && uvx ruff format --check"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-python-alpha": "^2.195.0-alpha.0",
    "aws-cdk-lib": "^2.195.0",
    "constructs": "^10.0.0"
  }
}
