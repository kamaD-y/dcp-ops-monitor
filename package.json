{
  "name": "dcp-ops-monitor",
  "version": "0.1.0",
  "bin": {
    "dcp-ops-monitor": "bin/dcp-ops-monitor.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test:cdk": "jest --testPathPattern ./test/cdk/*.test.ts",
    "test:unit": "cd lambda/dcp_etl && ENV=test uv run pytest -v --tb=short --disable-warnings --maxfail=1",
    "cdk": "cdk",
    "lint": "biome lint --write . && uvx ruff check",
    "lint:ci": "biome lint . && uvx ruff check --no-fix",
    "format": "biome format --write . && uvx ruff format",
    "format:ci": "biome format . && uvx ruff format --check"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "dotenv": "^16.5.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "lefthook": "^1.11.13",
    "lint-staged": "^16.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-python-alpha": "^2.195.0-alpha.0",
    "aws-cdk-lib": "^2.195.0",
    "constructs": "^10.0.0"
  }
}
